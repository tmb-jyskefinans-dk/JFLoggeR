{
  "name": "work-logger",
  "version": "1.0.0",
  "description": "Work Logger desktop app for tracking daily work activities",
  "author": "JD0060",
  "main": "electron/.dist/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "serve:renderer": "ng serve",
    "build:renderer": "ng build --configuration production",
    "build:main": "tsc -p electron",
    "watch:main": "tsc -p electron --watch",
  "watch:electron": "wait-on -t 90000 tcp:4200 electron/.dist/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:4200 nodemon --watch electron/.dist --exec electron electron/.dist/main.js",
  "watch:electron:nowait": "cross-env VITE_DEV_SERVER_URL=http://localhost:4200 nodemon --watch electron/.dist --exec electron electron/.dist/main.js",
    "dev": "concurrently -k \"npm run serve:renderer\" \"npm run watch:main\"  \"npm run watch:electron\"",
    "clean": "rimraf dist electron/.dist",
    "build": "npm run build:renderer && npm run build:main",
    "make": "electron-forge make",
    "release": "npm run make",
    "make:test": "electron-forge make --platform=win32",
    "make:win": "npm run clean && npm run build && electron-forge make --platform=win32",
    "make:mac": "npm run clean && npm run build && electron-forge make --platform=darwin",
    "make:linux": "npm run clean && npm run build && electron-forge make --platform=linux",
    "electron:run:prod": "npm run build && electron ./electron/.dist/main.js",
    "electron:run:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:4200 electron ./electron/.dist/main.js",
    "start": "electron-forge start",
    "test:unit": "jest",
    "package": "electron-forge package"
  },
  "build": {
    "appId": "com.jyskefinans.worklogger",
    "productName": "Work Logger",
    "files": [
      "dist/work-logger/**",
      "electron/**",
      "!electron/**/*.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@tailwindcss/postcss": "^4.1.16",
    "electron-squirrel-startup": "^1.0.1",
    "lowdb": "^7.0.1",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@electron/remote": "^2.1.3",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "jasmine-core": "~5.9.0",
    "jest": "^30.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.5"
  }
}
