{
  "name": "work-logger",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently -k 'npm:start-test' 'npm:electron:dev'",
    "build": "ng build",
    "electron": "tsc -p electron && electron ./electron/.dist/main.js",
    "electron:build": "ng build && tsc -p electron && electron ./electron/.dist/main.js",
    "electron:dev": "wait-on http://localhost:4200 && cross-env VITE_DEV_SERVER_URL=http://localhost:4200 && tsc -p electron && electron ./electron/.dist/main.js",
    "electron:test": "tsc -p electron && cross-env VITE_DEV_SERVER_URL=http://localhost:4200 && electron ./electron/.dist/main.js",
    "ng": "ng",
    "start-test": "ng serve",
    "test:unit": "jest"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@tailwindcss/postcss": "^4.1.16",
    "lowdb": "^7.0.1",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@electron/remote": "^2.1.3",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.9.0",
    "jest": "^30.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.jyskefinans.worklogger",
    "productName": "Work Logger",
    "files": [
      "dist/work-logger/**",
      "electron/**",
      "!electron/**/*.ts"
    ],
    "extraResources": [],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
